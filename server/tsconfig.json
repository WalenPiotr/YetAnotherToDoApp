{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./node_modules/@types/*", "*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"]
}
